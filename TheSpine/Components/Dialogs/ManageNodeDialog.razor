<AuthorizeView Roles="@Roles.Moderator">
    <Authorized>
        <MudDialog>
            <DialogContent>
                <MudForm Model="@Model" @ref="form" Validation="@(validator.ValidateModel)" ValidationDelay="0">
                    <MudTextField T="string" @bind-Value="@Model.Title" Label="Title" For="@(() => Model.Title)" Immediate="true" Variant="Variant.Outlined"/>
                </MudForm>
            </DialogContent>
            <DialogActions>
                <MudButton OnClick="Cancel">Cancel</MudButton>
                <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
            </DialogActions>
        </MudDialog>
    </Authorized>
    <NotAuthorized>
        <MudText Align="Align.Center" Typo="Typo.h4">You are not authorized.</MudText>
    </NotAuthorized>
</AuthorizeView>